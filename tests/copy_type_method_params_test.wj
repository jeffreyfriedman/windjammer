// Test: Copy type parameters in methods should not be borrowed
// Bug: Compiler incorrectly infers &Copy instead of Copy for method parameters

@derive(Copy, Clone, Debug, PartialEq)
pub struct Color {
    pub r: f32,
    pub g: f32,
    pub b: f32,
    pub a: f32,
}

@derive(Copy, Clone, Debug, PartialEq)
pub struct Renderer {
    pub handle: int,
}

impl Renderer {
    pub fn draw_circle(self, x: f32, y: f32, radius: f32, color: Color) {
        // Should be Color, not &Color
        let _ = color.r + color.g + color.b + color.a
    }
    
    pub fn draw_rect(self, x: f32, y: f32, w: f32, h: f32, color: Color) {
        // Should be Color, not &Color
        let _ = color.r * w * h
    }
}

pub fn test() {
    let renderer = Renderer { handle: 0 }
    let red = Color { r: 1.0, g: 0.0, b: 0.0, a: 1.0 }
    
    // Should pass Color by value (it's Copy)
    renderer.draw_circle(100.0, 100.0, 50.0, red)
    renderer.draw_rect(0.0, 0.0, 200.0, 100.0, red)
}









