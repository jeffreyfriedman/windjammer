// Test if/else expressions (ternary operator removed)
fn main() {
    let x = 5
    
    // Simple if/else expression
    let status = if x > 0 { "positive" } else { "non-positive" }
    println!("Status: {}", status)
    
    // Nested if/else expression
    let grade = if x >= 90 { "A" } else if x >= 80 { "B" } else { "C" }
    println!("Grade: {}", grade)
    
    // If/else with expressions
    let y = 10
    let max = if x > y { x } else { y }
    println!("Max: {}", max)
    
    // If/else in assignment
    let is_even = if x % 2 == 0 { true } else { false }
    println!("Is even: {}", is_even)
}
