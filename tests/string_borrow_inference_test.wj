// Test: String parameter inference 
// Current behavior: Parameters infer &String, 
// but callers can pass string literals (with auto .to_string())

pub struct Logger {
    prefix: String,
}

impl Logger {
    // Takes &str explicitly - the idiomatic way
    pub fn log_file(path: &str) {
        println!("Loading file: {}", path)
    }
    
    // Takes &str explicitly for borrowed access
    pub fn log_message(&self, message: &str) {
        println!("[{}] {}", self.prefix, message)
    }
    
    // Takes String ownership for storage
    pub fn new(name: String) -> Logger {
        Logger { prefix: name }
    }
}

pub fn test_string_borrow() {
    // String literals work directly with &str parameters
    Logger::log_file("test.txt")
    
    let logger = Logger::new("App".to_string())
    logger.log_message("Hello")
}

fn main() {
    test_string_borrow()
}


