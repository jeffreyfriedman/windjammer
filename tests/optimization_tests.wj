// Test file to verify clone optimizations are working

fn test_unnecessary_clone() {
    let x = "hello"
    
    // This .clone() should be eliminated (OnlyRead)
    let y = x.clone()
    
    println("${y}")
}

fn test_single_use() {
    let data = "test data"
    
    // This .clone() should be eliminated (SingleUse)
    process(data.clone())
}

fn test_escapes_function() {
    let value = "return me"
    
    // This .clone() should NOT be eliminated (value escapes)
    let result = value.clone()
    result
}

fn process(s: string) {
    println("Processing: ${s}")
}

fn main() {
    test_unnecessary_clone()
    test_single_use()
    let result = test_escapes_function()
    println("Result: ${result}")
}

