// Health check endpoint

use std.http
use std.time
use std.json

@derive(Serialize, Debug)
struct HealthStatus {
    pub status: string,
    pub timestamp: int,
    pub version: string,
}

pub fn check(req: Request) -> Response {
    let now = time.now_unix()
    
    let health_status = HealthStatus {
        status: "healthy",
        timestamp: now,
        version: "0.1.0",
    }
    
    http.json_response(200, health_status)
}

