// Simple UI example using windjammer-runtime::ui
// This demonstrates the Virtual DOM functionality

use std::ui

fn main() {
    // Create a simple UI tree
    let app = ui::div()
        .attr("class", "app")
        .child(ui::h1("Hello, Windjammer UI!"))
        .child(ui::p("This is a working Virtual DOM example"))
        .into_vnode()
    
    // Render to HTML string
    let html = ui::render_to_string(&app)
    println!("{}", html)
}

