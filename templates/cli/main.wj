// Command-line application template
use std::env
use std::process

fn main() {
    let args = env.args()
    
    if args.len() < 2 {
        println!("Usage: {} <name>", args[0])
        println!("Example: {} World", args[0])
        process.exit(1)
    }
    
    let name = args[1]
    println!("Hello, {}!", name)
    println!("Welcome to your new Windjammer CLI application!")
}
